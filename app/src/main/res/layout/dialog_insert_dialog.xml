<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_circle">

    <TextView
        android:id="@+id/tv_tip_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入产出数量"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/name_product_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edit_out_num"
        android:background="@drawable/edit_input_bac"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="总重量："
            android:layout_marginLeft="15dp"/>
        <EditText
            android:id="@+id/edit_all_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_input_bac"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <!--<TextView-->
        <!--android:id="@+id/tv_all_weight"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="30dp"-->
        <!--android:gravity="center"-->
        <!--android:visibility="gone"-->
        <!--android:layout_marginTop="10dp"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_transterm"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/nfcbuttonbac"
        android:text="点击重量转换数量"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/cancel_insert_dialog"
            android:text="取消"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/true_inset_dialog"
            android:text="确定"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/cc"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
</LinearLayout>