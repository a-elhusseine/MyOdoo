<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_commit_feednum">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="产品"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:paddingLeft="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="退料数量"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:paddingRight="15dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_yuancailiao"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="原材料"
                android:gravity="center_vertical"
                android:textColor="@color/black"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_feed_material"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/tv_banchengpin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="半成品"
                android:gravity="center_vertical"
                android:textColor="@color/black"/>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/recycler_semematerial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/tv_liuzhuanpin"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="流转品"
                android:gravity="center_vertical"
                android:textColor="@color/black"/>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/recycler_liuzhuan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/tv_commit_feednum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提交退料数量"
        android:background="@color/cc"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>