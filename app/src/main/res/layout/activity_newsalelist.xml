    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/result_minor_text"/>
    <SearchView
        android:layout_marginTop="15dp"
        android:id="@+id/search_newsalelist"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:focusable="false"
        android:iconifiedByDefault="false"
        android:queryHint="请输入源单据号搜索"
        android:background="@drawable/edit_input_bac"/>
    <RadioGroup
        android:id="@+id/parent_radio_dan"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <RadioButton
            android:id="@+id/wait_radio_dan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_bac"
            android:layout_height="match_parent"
            android:text="单据待处理"
            android:gravity="center"
            android:checked="true"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/can_radio_dan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_bac"
            android:layout_height="match_parent"
            android:text="单据可处理"
            android:gravity="center"
            android:textColor="@color/white"/>
        <RadioButton
            android:id="@+id/all_done"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/radio_bac"
            android:layout_height="match_parent"
            android:text="已完成"
            android:gravity="center"
            android:textColor="@color/white"/>
    </RadioGroup>

    <com.aspsine.swipetoloadlayout.SwipeToLoadLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swipeToLoad">
        <tarce.myodoo.uiutil.RecyclerHeaderView
            android:id="@+id/swipe_refresh_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </tarce.myodoo.uiutil.RecyclerHeaderView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/swipe_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
        <tarce.myodoo.uiutil.RecyclerFooterView
            android:id="@+id/swipe_load_more_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </tarce.myodoo.uiutil.RecyclerFooterView>
    </com.aspsine.swipetoloadlayout.SwipeToLoadLayout>
</LinearLayout>