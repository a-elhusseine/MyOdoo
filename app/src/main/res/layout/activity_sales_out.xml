<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search_customer"
        android:layout_width="match_parent"
        android:queryHint="请输入客户简称用于搜索"
        android:iconifiedByDefault="false"
        android:layout_height="40dp"/>
    <SearchView
        android:id="@+id/search_sales_number"
        android:layout_width="match_parent"
        android:queryHint="请输入销售单号搜索"
        android:iconifiedByDefault="false"
        android:layout_height="40dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/recyclerview"
        android:layout_height="200dp">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_get_last"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="获取最新"
        android:background="@color/cc"
        android:gravity="center"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerviewStates"
        android:layout_height="200dp">

    </android.support.v7.widget.RecyclerView>



</LinearLayout>