<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/edit_search_custom"
        android:layout_width="match_parent"
        android:queryHint="请输入供应商名称用于搜索"
        android:iconifiedByDefault="false"
        android:layout_height="40dp"/>
    <SearchView
        android:id="@+id/edit_search_order"
        android:layout_width="match_parent"
        android:queryHint="根据采购单号搜索"
        android:iconifiedByDefault="false"
        android:layout_height="40dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_show_supplier"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_get_last"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="获取最新"
        android:gravity="center"
        android:background="@color/cc"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_take_deliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>