<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_controll_scan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/cc"
            android:textColor="@color/white"
            android:text="打开扫描"
            android:gravity="center"
            android:textSize="17sp"/>
        <FrameLayout
            android:id="@+id/fragment_scan"
            android:layout_below="@+id/tv_controll_scan"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_below="@+id/fragment_scan"
            android:id="@+id/linear_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="待工中"
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:text="移动"
                android:gravity="center"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:text="工作中"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_above="@+id/tv_add_true"
            android:layout_width="match_parent"
            android:layout_below="@+id/linear_title"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_person_wait"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/icon_to_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_person_work"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_add_true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/cc"
            android:textColor="@color/white"
            android:text="添加完成"
            android:gravity="center"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>